<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:paddingBottom="4dp"
              android:paddingLeft="0dp"
              android:paddingRight="0dp"
              android:paddingTop="4dp"
              android:orientation="horizontal">

    <LinearLayout android:layout_weight="0.85"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="0dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp">

        <TextView android:id="@+id/checkbox_preference_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:ellipsize="marquee"
                  android:fadingEdge="horizontal"
                  android:textColor="@color/disabled_text_selector"
                  android:text="@string/dummy_title"
                  android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/checkbox_preference_summary"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="@color/disabled_text_selector"
                  android:maxLines="3"
                  android:text="@string/dummy_summary"/>

    </LinearLayout>

    <!-- Preference should place its actual preference widget here. -->
    <LinearLayout android:layout_weight="0.15"
                  android:id="@+id/widget_frame"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:orientation="vertical">
        <CheckBox style="@style/PreferencesCheckboxStyle"
                  android:id="@+id/checkbox_preference_checkbox"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:gravity="center"/>
    </LinearLayout>
</LinearLayout>